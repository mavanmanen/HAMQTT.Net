    "FixReference": {
      "type": "parameter",
      "isHidden": "true",
      "replaces": "..\\..\\..\\HAMQTT.Integration\\HAMQTT.Integration.csproj",
      "defaultValue": "..\\HAMQTT.Integration\\HAMQTT.Integration.csproj"
    },
    "integration-name": {
      "type": "parameter",
      "datatype": "string",
      "description": "Name of the integration",
      "replaces": "IntegrationName",
      "isRequired": true
    },
    "IntegrationNameConstantCase": {
      "type": "generated",
      "generator": "regex",
      "replaces": "INTEGRATION_NAME",
      "parameters": {
        "source": "IntegrationName",
        "steps": [
          {
            "regex": "(?<=[a-z])(?=[A-Z])",
            "replacement": "_"
          },
          {
            "regex": ".*",
            "replacement": "upper"
          }
        ]
      }
    },
    "IntegrationNameLowerSnakeCase": {
      "type": "generated",
      "generator": "regex",
      "replaces": "integration_name",
      "parameters": {
        "source": "IntegrationName",
        "steps": [
          {
            "regex": "(?<=[a-z])(?=[A-Z])",
            "replacement": "_"
          },
          {
            "regex": ".*",
            "replacement": "lower"
          }
        ]
      }
    },
    "IntegrationNameLowerKebabCase": {
      "type": "generated",
      "generator": "regex",
      "replaces": "integration-name",
      "parameters": {
        "source": "IntegrationName",
        "steps": [
          {
            "regex": "(?<=[a-z])(?=[A-Z])",
            "replacement": "-"
          },
          {
            "regex": ".*",
            "replacement": "lower"
          }
        ]
      }
    },
    "mqtt-host": {
      "type": "parameter",
      "datatype": "string",
      "description": "MQTT Host",
      "replaces": "MQTT_HOST_VALUE",
      "isRequired": true
    },
    "mqtt-username": {
      "type": "parameter",
      "datatype": "string",
      "description": "MQTT Username",
      "replaces": "MQTT_USERNAME_VALUE",
      "isRequired": true
    }
  },
