<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <PackageType>Template</PackageType>
        <Version>1.0.11</Version>
        <PackageId>HAMQTT.Integration.Template</PackageId>
        <Title>HAMQTT Integration Template</Title>
        <Authors>mavanmanen</Authors>
        <Description>Template for creating a new HAMQTT integration</Description>
        <PackageTags>dotnet-new;templates</PackageTags>
        <TargetFramework>net10.0</TargetFramework>
        <IncludeContentInPack>true</IncludeContentInPack>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <ContentTargetFolders>content</ContentTargetFolders>
        <PackageProjectUrl>https://github.com/mavanmanen/HAMQTT</PackageProjectUrl>
        <RepositoryUrl>https://github.com/mavanmanen/HAMQTT</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <NoDefaultExcludes>true</NoDefaultExcludes>
    </PropertyGroup>

    <PropertyGroup>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
    </PropertyGroup>
    
    <ItemGroup>
        <Content Include="Template\**\*" Exclude="Template\**\bin\**;Template\**\obj\**"/>
        <Compile Remove="**\*" />
        <None Remove="HAMQTT.Integration\**;HAMQTT.CLI\**;.gitignore;Template\**\bin\**;Template\**\obj\**" />
        <Content Update="Template\HAMQTT.Integration.IntegrationName\IntegrationName\workflows\integration-name.yml">
          <Link>Template\HAMQTT.Integration.IntegrationName\HAMQTT.Integration.IntegrationName\workflows\integration-name.yml</Link>
        </Content>
        <Content Update="Template\HAMQTT.Integration.IntegrationName\IntegrationName\.env">
          <Link>Template\HAMQTT.Integration.IntegrationName\HAMQTT.Integration.IntegrationName\.env</Link>
        </Content>
        <Content Update="Template\HAMQTT.Integration.IntegrationName\IntegrationName\Dockerfile">
          <Link>Template\HAMQTT.Integration.IntegrationName\HAMQTT.Integration.IntegrationName\Dockerfile</Link>
        </Content>
        <Content Update="Template\HAMQTT.Integration.IntegrationName\IntegrationName\IntegrationNameIntegration.cs">
          <Link>Template\HAMQTT.Integration.IntegrationName\HAMQTT.Integration.IntegrationName\IntegrationNameIntegration.cs</Link>
        </Content>
        <Content Update="Template\HAMQTT.Integration.IntegrationName\IntegrationName\Program.cs">
          <Link>Template\HAMQTT.Integration.IntegrationName\HAMQTT.Integration.IntegrationName\Program.cs</Link>
        </Content>
        <Content Update="Template\HAMQTT.Integration.IntegrationName\IntegrationName\Startup.cs">
          <Link>Template\HAMQTT.Integration.IntegrationName\HAMQTT.Integration.IntegrationName\Startup.cs</Link>
        </Content>
    </ItemGroup>
</Project>