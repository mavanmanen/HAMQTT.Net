{
  "$schema": "https://json.schemastore.org/template",
  "identity": "HAMQTT.Integration.Template",
  "author": "mavanmanen",
  "classifications": [
    "HAMQTT",
    "Integration"
  ],
  "name": "HAMQTT Integration Project",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "shortName": "hamqtt-integration",
  "sources": [
    {
      "source": "./",
      "target": "./",
      "include": [
        "**/*"
      ],
      "exclude": [
        "**/[Bb]in/**",
        "**/[Oo]bj/**",
        ".template.config/**/*",
        "**/*.filelist",
        "**/*.user",
        "**/*.lock.json",
        "IntegrationName/workflows/**"
      ]
    },
    {
      "source": "./IntegrationName/workflows/",
      "target": ".github/workflows/",
      "include": [
        "*.yml"
      ]
    }
  ],
  "primaryOutputs": [
    {
      "path": "IntegrationName/IntegrationName.csproj"
    }
  ],
  "symbols": {
    "integration-name": {
      "type": "parameter",
      "datatype": "string",
      "description": "Name of the integration",
      "replaces": "IntegrationName",
      "fileRename": "IntegrationName",
      "isRequired": true
    },
    "UserSecretsId": {
      "type": "generated",
      "generator": "guid",
      "replaces": "USER_SECRETS_ID"
    },
    "ReplaceUppercaseWithUnderscore": {
      "type": "generated",
      "generator": "regex",
      "parameters": {
        "source": "integration-name",
        "steps": [
          {
            "regex": "(?<=[a-z])(?=[A-Z])",
            "replacement": "_"
          }
        ]
      }
    },
    "ReplacesUppercaseWithDash": {
      "type": "generated",
      "generator": "regex",
      "parameters": {
        "source": "integration-name",
        "steps": [
          {
            "regex": "(?<=[a-z])(?=[A-Z])",
            "replacement": "-"
          }
        ]
      }
    },
    "ConstantCase": {
      "type": "generated",
      "generator": "casing",
      "replaces": "INTEGRATION_NAME",
      "parameters": {
        "source": "ReplaceUppercaseWithUnderscore",
        "toLower": false
      }
    },
    "KebabCase": {
      "type": "generated",
      "generator": "casing",
      "replaces": "integration-name",
      "fileRename": "integration-name",
      "parameters": {
        "source": "ReplacesUppercaseWithDash",
        "toLower": true
      }
    },
    "SnakeCase": {
      "type": "generated",
      "generator": "casing",
      "replaces": "integration_name",
      "parameters": {
        "source": "ReplaceUppercaseWithUnderscore",
        "toLower": true
      }
    }
  },
  "postActions": [
    {
      "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
      "description": "Add project to solution",
      "args": {
        "primaryOutputIndexes": "0"
      },
      "continueOnError": true,
      "manualInstructions": [
        {
          "text": "Add project to solution"
        }
      ]
    }
  ]
}